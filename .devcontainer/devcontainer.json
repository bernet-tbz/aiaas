{
	"name": "Python Multi-Kernel DevContainer",
	"build": {
		"dockerfile": "./Dockerfile",
		"context": "."
	},

	"customizations": {
		"vscode": {
			"settings": {
				"python.venvPath": "/opt",
				"python.defaultInterpreterPath": "/opt/jupyter/bin/python"
			},
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter"
			]
		}
	},
	
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"username": "vscode",
			"userUid": "1000",
			"userGid": "1000"
		}
	},
	
	"postCreateCommand":"cd /workspaces/aiaas && curl -L https://github.com/mc-b/lernvirt/archive/refs/heads/main.tar.gz | tar xz --strip-components=3 lernvirt-main/examples/aiaas --exclude='*/'","remoteUser":"vscode",
	
	"runArgs": [
		"--security-opt=label=disable"
	]
}
